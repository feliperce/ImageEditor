<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout">

    <TextView
            android:text="@string/text_transform_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:id="@+id/resizeTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>

    <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/resizeSeekbar"
            app:layout_constraintStart_toStartOf="@+id/resizeTextView"
            app:layout_constraintTop_toBottomOf="@+id/resizeTextView"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:text="@string/text_transform_rotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/resizeSeekbar"
            android:id="@+id/scaleTextView"
            app:layout_constraintTop_toBottomOf="@+id/resizeSeekbar"
            android:layout_marginTop="8dp"/>

    <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/scaleSeekbar"
            app:layout_constraintStart_toStartOf="@+id/scaleTextView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/scaleTextView"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>